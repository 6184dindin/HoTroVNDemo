<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_gray_background2"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/layoutHeading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/color_white"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:background="@color/transition"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_30sdp"
                android:fontFamily="@font/tahomabd"
                android:text="Chiến dịch cứu trợ"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_20sdp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_gray_border1" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btnSave"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHeading">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_10sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@drawable/bg_corner_stroke"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người liên hệ"
                        android:fontFamily="@font/tahoma"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:fontFamily="@font/tahoma"
                        android:background="@drawable/bg_corner_stroke_edit_text"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vai trò"
                        android:fontFamily="@font/tahoma"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:fontFamily="@font/tahoma"
                        android:background="@drawable/bg_corner_stroke_edit_text"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điện thoại"
                        android:fontFamily="@font/tahoma"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tahoma"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bg_corner_stroke_edit_text"
                        android:inputType="number"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/tahoma"
                        android:layout_height="wrap_content"
                        android:text="Tổ chức/Đơn vị"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/tahoma"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bg_corner_stroke_edit_text"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_7sdp"
                    android:background="@drawable/bg_corner_stroke"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời gian"
                        android:fontFamily="@font/tahoma"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_15sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bg_corner_stroke_edit_text"
                        android:padding="@dimen/_5sdp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/tahoma"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:background="@color/transition"
                            android:textSize="@dimen/_15sdp" />

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@color/transition"
                            android:src="@drawable/ic_calendar" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mặt hàng"
                        android:fontFamily="@font/tahoma"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/_15sdp" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150sdp"
                        android:fontFamily="@font/tahoma"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/bg_corner_stroke_edit_text"
                        android:gravity="top"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_button_add_image"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_picture_gallery" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:text="Thêm ảnh mặt hàng"
                            android:fontFamily="@font/tahomabd"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/_15sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:layout_marginBottom="@dimen/_7sdp"
            android:background="@drawable/bg_button_green"
            android:backgroundTint="@color/color_green"
            android:paddingVertical="@dimen/_7sdp"
            android:fontFamily="@font/tahoma"
            android:text="Lưu"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>