<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_gray_background1">

        <RelativeLayout
            android:id="@+id/layoutHeading"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/color_white"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@color/transition"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_50sdp"
                android:fontFamily="@font/tahomabd"
                android:text="Thêm tin cứu trợ"
                android:textColor="@color/color_black"
                android:textSize="@dimen/title_default" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/btnSave"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutHeading">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:orientation="vertical"
                android:padding="@dimen/_15sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/tahoma"
                    android:text="Thông tin để liên hệ đợt cứu trợ"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/bg_corner_stroke_edit_text"
                    android:fontFamily="@font/tahoma"
                    android:hint="@string/contact_name"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/text_view_default" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/bg_corner_stroke_edit_text"
                    android:fontFamily="@font/tahoma"
                    android:hint="Số điện thoại"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/text_view_default" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/bg_corner_stroke_edit_text"
                    android:fontFamily="@font/tahoma"
                    android:hint="Vai trò/Chức vụ"
                    android:inputType="number"
                    android:maxLines="1"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/text_view_default" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:background="@drawable/bg_corner_stroke_edit_text"
                    android:fontFamily="@font/tahoma"
                    android:hint="Tổ chức/Đoàn thể"
                    android:inputType="textCapSentences"
                    android:maxLines="2"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/text_view_default" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:fontFamily="@font/tahoma"
                    android:text="Ngày thực hiện"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_16sdp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_40sdp"
                        android:background="@drawable/bg_corner_stroke_edit_text"
                        android:enabled="false"
                        android:fontFamily="@font/tahoma"
                        android:hint="Ngày thực hiện"
                        android:inputType="text"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/text_view_default" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transition"
                        android:src="@drawable/ic_calendar" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/tahoma"
                    android:text="Nhu yếu phẩm bạn đang có"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/_16sdp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/bg_corner_stroke_edit_text"
                    android:fontFamily="@font/tahoma"
                    android:gravity="top"
                    android:hint="Thông tin nhu yếu phẩm bạn đang có để hỗ trợ"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/text_view_default" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/btnAddImage"
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:background="@drawable/bg_button_add_image"
                        android:gravity="center"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_3sdp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_picture_gallery" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/tahomabd"
                            android:text="Hình ảnh"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/text_view_default" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvNumberImageSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="5/5"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_green"
            android:fontFamily="@font/tahoma"
            android:paddingVertical="@dimen/_7sdp"
            android:text="ĐĂNG TIN"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_button_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>