<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_white"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/g0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_percent="0.5"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/timesbd"
            android:text="HOTROVN"
            android:textColor="@color/color_green"
            android:textSize="@dimen/_35sdp"
            app:layout_constraintBottom_toBottomOf="@+id/g0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/timesbi"
            android:text="Lan toả niềm tin"
            android:textColor="@color/color_orange_title"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="@id/tvHeading"
            app:layout_constraintBottom_toTopOf="@+id/tvQuestion"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="Bạn đang quan tâm ?"
            android:textSize="@dimen/_22sdp"
            android:textColor="@color/color_black"
            android:fontFamily="@font/times"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/g0"/>
        <Button
            android:id="@+id/btnNeedRelief"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CẦN CỨU TRỢ"
            android:background="@drawable/bg_button_green"
            android:backgroundTint="@color/color_green"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/color_white"
            android:fontFamily="@font/times"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/g0"/>
        <Button
            android:id="@+id/btnHelperJoined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MẠNH THƯỜNG QUÂN"
            android:background="@drawable/bg_button_green"
            android:backgroundTint="@color/color_green"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/color_white"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/times"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnNeedRelief"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>