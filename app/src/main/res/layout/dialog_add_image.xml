<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/bg_button_green"
            android:backgroundTint="@color/color_gray_background1"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/btnLibrary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transition"
                android:fontFamily="@font/tahoma"
                android:paddingVertical="@dimen/_7sdp"
                android:text="Mở bộ sưu tập"
                android:textAllCaps="false"
                android:textColor="@color/color_green"
                android:textSize="@dimen/_16sdp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_gray_border" />

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transition"
                android:fontFamily="@font/tahoma"
                android:paddingVertical="@dimen/_7sdp"
                android:text="Chụp ảnh"
                android:textAllCaps="false"
                android:textColor="@color/color_green"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/bg_button_green"
            android:backgroundTint="@color/color_white"
            android:fontFamily="@font/tahomabd"
            android:paddingVertical="@dimen/_7sdp"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="@color/color_green"
            android:textSize="@dimen/_16sdp" />
    </LinearLayout>
</RelativeLayout>