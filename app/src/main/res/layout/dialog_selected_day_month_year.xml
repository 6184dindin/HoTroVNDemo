<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bg_corner"
            android:backgroundTint="@color/color_white"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="horizontal">
                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/numberPickerDay"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_160sdp"
                    app:np_dividerColor="@color/color_gray_background1"
                    app:np_dividerDistance="@dimen/_20sdp"
                    app:np_dividerThickness="0.75dp"
                    app:np_selectedTextColor="@color/color_black"
                    app:np_selectedTextSize="@dimen/_18sdp"
                    app:np_textColor="@color/color_gray_text"
                    app:np_textSize="@dimen/_16sdp"
                    app:np_wheelItemCount="8" />
                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/numberPickerMonth"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_160sdp"
                    app:np_dividerColor="@color/color_gray_background1"
                    app:np_dividerDistance="@dimen/_20sdp"
                    app:np_dividerThickness="0.75dp"
                    app:np_selectedTextColor="@color/color_black"
                    app:np_selectedTextSize="@dimen/_18sdp"
                    app:np_textColor="@color/color_gray_text"
                    app:np_textSize="@dimen/_16sdp"
                    app:np_wheelItemCount="8" />
                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/numberPickerYear"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_160sdp"
                    app:np_dividerColor="@color/color_gray_background1"
                    app:np_dividerDistance="@dimen/_20sdp"
                    app:np_dividerThickness="0.75dp"
                    app:np_selectedTextColor="@color/color_black"
                    app:np_selectedTextSize="@dimen/_18sdp"
                    app:np_textColor="@color/color_gray_text"
                    app:np_textSize="@dimen/_16sdp"
                    app:np_wheelItemCount="8" />
            </LinearLayout>

            <Button
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_30sdp"
                android:background="@drawable/bg_button_green"
                android:backgroundTint="@color/color_green"
                android:text="@string/selected"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_button_default" />
        </LinearLayout>
    </RelativeLayout>
</layout>