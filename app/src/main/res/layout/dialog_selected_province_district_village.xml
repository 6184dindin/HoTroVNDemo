<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <com.shawnlin.numberpicker.NumberPicker
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numberPicker"
                android:layout_marginVertical="@dimen/_20sdp"
                app:np_dividerColor="@color/color_green"
                app:np_dividerThickness="0.5dp"
                app:np_dividerDistance="@dimen/_30sdp"
                app:np_selectedTextColor="@color/color_green"
                app:np_textColor="@color/color_black"
                app:np_selectedTextSize="@dimen/_20sdp"
                app:np_textSize="@dimen/_15sdp"
                app:np_wheelItemCount="5"
                app:np_wrapSelectorWheel="false"/>

            <Button
                android:id="@+id/btnDone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/bg_button_green"
                android:backgroundTint="@color/color_green"
                android:text="Chọn"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/_15sdp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>