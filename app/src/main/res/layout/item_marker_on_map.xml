<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/bg_corner_stroke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/_3sdp"
        android:paddingRight="@dimen/_5sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_7sdp"
            android:src="@drawable/ic_voice_command"
            android:layout_height="@dimen/_20sdp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25/10/2020 - 9:30"
                android:textColor="@color/color_black"
                android:fontFamily="@font/information"
                android:textSize="@dimen/_8sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(0) chiến dịch hỗ trợ"
                android:fontFamily="@font/information"
                android:textColor="@color/color_black"
                android:textSize="@dimen/_6sdp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_orange_text"
                android:text="Xem chi tiết >>"
                android:layout_gravity="right"
                android:fontFamily="@font/information"
                android:textSize="@dimen/_6sdp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_marginTop="1dp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:src="@drawable/ic_pin"/>
</LinearLayout>